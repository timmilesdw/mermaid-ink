{
  "name": "mermaid-ink",
  "displayName": "Mermaid Ink",
  "description": "Render Mermaid diagrams in markdown preview with proper dark/light theme support",
  "version": "0.1.0",
  "publisher": "timmilesdw",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timmilesdw/mermaid-ink"
  },
  "bugs": {
    "url": "https://github.com/timmilesdw/mermaid-ink/issues"
  },
  "homepage": "https://github.com/timmilesdw/mermaid-ink#readme",
  "galleryBanner": {
    "color": "#1e293b",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "mermaid",
    "diagram",
    "markdown",
    "preview",
    "flowchart",
    "sequence diagram"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./dist/preview/mermaid-renderer.js"
    ],
    "markdown.previewStyles": [
      "./dist/preview/mermaid.css"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "release": "./scripts/release.sh"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "mermaid": "^10.9.0"
  }
}
